@model IEnumerable<GestionRestaurante.Models.Plato>
@using GestionRestaurante.Helpers
@{
    ViewData["Title"] = "Platos";
}

<div class="page-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="mb-0"><i class="fas fa-utensils me-3"></i>Menú del Restaurante</h1>
                <p class="mb-0 mt-2">Administra los platos y bebidas del menú</p>
            </div>
            <div class="col-md-4 text-end">
                <a class="btn btn-light btn-lg" asp-action="Create">
                    <i class="fas fa-plus me-2"></i>Nuevo Plato
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th><i class="fas fa-utensils me-2"></i>Plato</th>
                            <th><i class="fas fa-align-left me-2"></i>Descripción</th>
                            <th><i class="fas fa-dollar-sign me-2"></i>Precio</th>
                            <th><i class="fas fa-tags me-2"></i>Categoría</th>
                            <th class="text-center"><i class="fas fa-cogs me-2"></i>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-bold">@item.nombre</td>
                            <td>@(string.IsNullOrEmpty(item.descripcion) ? "Sin descripción" : item.descripcion)</td>
                            <td class="fw-bold text-success">@PriceHelper.FormatPrice(item.precio)</td>
                            <td>
                                <span class="badge bg-primary">@item.categoria.ToString().Replace("_", " ")</span>
                            </td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a class="btn btn-outline-info btn-sm" asp-action="Details" asp-route-id="@item.Id" title="Ver detalles">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a class="btn btn-outline-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id" title="Editar">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a class="btn btn-outline-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id" title="Eliminar">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


