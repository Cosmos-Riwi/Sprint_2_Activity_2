<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema de Restaurante</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #1a1a1a;
            color: #ffffff;
        }
        .navbar {
            background-color: #2d2d2d !important;
            border-bottom: 1px solid #404040 !important;
        }
        .navbar-brand {
            font-weight: bold;
            color: #ffffff !important;
        }
        .nav-link {
            color: #ffffff !important;
        }
        .nav-link:hover {
            color: #ffffff !important;
        }
        .card {
            background-color: #2d2d2d;
            border: 1px solid #404040;
            color: #ffffff;
        }
        .card-header {
            background-color: #404040;
            color: #ffffff;
            border-bottom: 1px solid #555555;
        }
        .btn-primary {
            background-color: #404040;
            border-color: #555555;
            color: #ffffff;
        }
        .btn-primary:hover {
            background-color: #555555;
            border-color: #666666;
            color: #ffffff;
        }
        .btn-secondary {
            background-color: #555555;
            border-color: #666666;
            color: #ffffff;
        }
        .btn-secondary:hover {
            background-color: #666666;
            border-color: #777777;
            color: #ffffff;
        }
        .btn-danger {
            background-color: #666666;
            border-color: #777777;
            color: #ffffff;
        }
        .btn-danger:hover {
            background-color: #777777;
            border-color: #888888;
            color: #ffffff;
        }
        .btn-outline-primary {
            color: #ffffff !important;
            border-color: #555555 !important;
        }
        .btn-outline-primary:hover {
            background-color: #555555 !important;
            border-color: #666666 !important;
            color: #ffffff !important;
        }
        .btn-outline-secondary {
            color: #ffffff !important;
            border-color: #666666 !important;
        }
        .btn-outline-secondary:hover {
            background-color: #666666 !important;
            border-color: #777777 !important;
            color: #ffffff !important;
        }
        .btn-outline-danger {
            color: #ffffff !important;
            border-color: #777777 !important;
        }
        .btn-outline-danger:hover {
            background-color: #777777 !important;
            border-color: #888888 !important;
            color: #ffffff !important;
        }
        .btn-outline-info {
            color: #ffffff !important;
            border-color: #555555 !important;
        }
        .btn-outline-info:hover {
            background-color: #555555 !important;
            border-color: #666666 !important;
            color: #ffffff !important;
        }
        .btn-outline-warning {
            color: #ffffff !important;
            border-color: #666666 !important;
        }
        .btn-outline-warning:hover {
            background-color: #666666 !important;
            border-color: #777777 !important;
            color: #ffffff !important;
        }
        .table {
            color: #ffffff;
            border-color: #555555;
        }
        .table-dark {
            background-color: #404040;
            border-color: #555555;
        }
        .table-dark th {
            background-color: #2d2d2d !important;
            border-color: #555555 !important;
            color: #ffffff !important;
        }
        .table-dark td {
            background-color: #2d2d2d !important;
            border-color: #555555 !important;
            color: #ffffff !important;
        }
        .table-striped > tbody > tr:nth-of-type(odd) > td {
            background-color: #404040 !important;
        }
        .table-hover tbody tr:hover {
            background-color: #555555 !important;
        }
        .table-bordered {
            border-color: #555555 !important;
        }
        .table-bordered th,
        .table-bordered td {
            border-color: #555555 !important;
        }
        .table tbody tr {
            background-color: #2d2d2d !important;
            color: #ffffff !important;
        }
        .table tbody tr td {
            background-color: #2d2d2d !important;
            color: #ffffff !important;
            border-color: #555555 !important;
        }
        .table thead tr th {
            background-color: #2d2d2d !important;
            color: #ffffff !important;
            border-color: #555555 !important;
        }
        .form-control, .form-select {
            background-color: #404040;
            border: 1px solid #555555;
            color: #ffffff;
        }
        .form-control:focus, .form-select:focus {
            background-color: #404040;
            border-color: #6c757d;
            color: #ffffff;
            box-shadow: 0 0 0 0.2rem rgba(108, 117, 125, 0.25);
        }
        .form-control::placeholder {
            color: #ffffff !important;
            opacity: 1;
        }
        .form-control::-webkit-input-placeholder {
            color: #ffffff !important;
        }
        .form-control::-moz-placeholder {
            color: #ffffff !important;
            opacity: 1;
        }
        .form-control:-ms-input-placeholder {
            color: #ffffff !important;
        }
        .form-control:-moz-placeholder {
            color: #ffffff !important;
            opacity: 1;
        }
        .form-label {
            color: #ffffff;
        }
        .alert-success {
            background-color: #404040;
            border: 1px solid #555555;
            color: #ffffff;
        }
        .alert-danger {
            background-color: #404040;
            border: 1px solid #555555;
            color: #ffffff;
        }
        .alert-warning {
            background-color: #404040;
            border: 1px solid #555555;
            color: #ffffff;
        }
        .alert-info {
            background-color: #404040;
            border: 1px solid #555555;
            color: #ffffff;
        }
        .text-danger {
            color: #ffffff !important;
        }
        .text-muted {
            color: #999999 !important;
        }
        .text-light {
            color: #ffffff !important;
        }
        .text-white {
            color: #ffffff !important;
        }
        h1, h2, h3, h4, h5, h6 {
            color: #ffffff !important;
        }
        p {
            color: #ffffff;
        }
        .card-text {
            color: #ffffff;
        }
        .bg-warning {
            background-color: #666666 !important;
            color: #ffffff !important;
        }
        .bg-success {
            background-color: #555555 !important;
            color: #ffffff !important;
        }
        .bg-danger {
            background-color: #666666 !important;
            color: #ffffff !important;
        }
        .bg-info {
            background-color: #555555 !important;
            color: #ffffff !important;
        }
        .bg-secondary {
            background-color: #404040 !important;
            color: #ffffff !important;
        }
        .badge {
            background-color: #555555 !important;
            color: #ffffff !important;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">
                    Sistema de Restaurante
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Customer" asp-action="Index">
                                Clientes
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Waiter" asp-action="Index">
                                Meseros
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Dish" asp-action="Index">
                                Platos
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Order" asp-action="Index">
                                Pedidos
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Reservation" asp-action="Index">
                                Reservas
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">
                                Acerca de
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <div class="container">
        <main role="main" class="pb-3">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            
            @RenderBody()
        </main>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
