@model IEnumerable<GestionRestaurante.Models.Reserva>
@{
    ViewData["Title"] = "Reservas";
}

<div class="page-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="mb-0"><i class="fas fa-calendar-alt me-3"></i>Gesti√≥n de Reservas</h1>
                <p class="mb-0 mt-2">Administra las reservas de mesas del restaurante</p>
            </div>
            <div class="col-md-4 text-end">
                <a class="btn btn-light btn-lg" asp-action="Create">
                    <i class="fas fa-plus me-2"></i>Nueva Reserva
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th><i class="fas fa-calendar me-2"></i>Fecha</th>
                            <th><i class="fas fa-clock me-2"></i>Hora</th>
                            <th><i class="fas fa-users me-2"></i>Personas</th>
                            <th><i class="fas fa-user me-2"></i>Cliente</th>
                            <th class="text-center"><i class="fas fa-cogs me-2"></i>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-bold">@item.fecha.ToString("dd/MM/yyyy")</td>
                            <td>@item.hora.ToString(@"hh\:mm")</td>
                            <td>
                                <span class="badge bg-info">@item.numero_personas personas</span>
                            </td>
                            <td class="fw-bold">@item.Cliente?.nombre @item.Cliente?.apellido</td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a class="btn btn-outline-info btn-sm" asp-action="Details" asp-route-id="@item.Id" title="Ver detalles">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a class="btn btn-outline-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id" title="Editar">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a class="btn btn-outline-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id" title="Eliminar">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


