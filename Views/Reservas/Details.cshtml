@model GestionRestaurante.Models.Reserva
@{
    ViewData["Title"] = "Detalles Reserva";
}

<div class="page-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="mb-0"><i class="fas fa-eye me-3"></i>Detalles de la Reserva</h1>
                <p class="mb-0 text-muted">Información completa de la reserva del <strong>@Model.fecha.ToString("dd/MM/yyyy")</strong></p>
            </div>
            <div class="col-md-4 text-end">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Volver a Reservas
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-gradient-info text-white">
                    <h5 class="mb-0"><i class="fas fa-calendar-check me-2"></i>Información de la Reserva</h5>
                </div>
                <div class="card-body p-4">
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <div class="info-item">
                                <label class="info-label">
                                    <i class="fas fa-calendar me-2 text-primary"></i>Fecha de la Reserva
                                </label>
                                <div class="info-value date-display">@Model.fecha.ToString("dd/MM/yyyy")</div>
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-4">
                            <div class="info-item">
                                <label class="info-label">
                                    <i class="fas fa-clock me-2 text-primary"></i>Hora de la Reserva
                                </label>
                                <div class="info-value time-display">@Model.hora.ToString(@"hh\:mm")</div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <div class="info-item">
                                <label class="info-label">
                                    <i class="fas fa-users me-2 text-primary"></i>Número de Personas
                                </label>
                                <div class="info-value">
                                    <span class="badge bg-primary fs-6">@Model.numero_personas personas</span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-4">
                            <div class="info-item">
                                <label class="info-label">
                                    <i class="fas fa-user me-2 text-primary"></i>Cliente
                                </label>
                                <div class="info-value">
                                    @if (Model.Cliente != null)
                                    {
                                        <span class="client-display">@Model.Cliente.nombre @Model.Cliente.apellido</span>
                                    }
                                    else
                                    {
                                        <em class="text-muted">Cliente no encontrado</em>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <div class="info-item">
                                <label class="info-label">
                                    <i class="fas fa-envelope me-2 text-primary"></i>Correo del Cliente
                                </label>
                                <div class="info-value">
                                    @if (Model.Cliente != null)
                                    {
                                        <i class="fas fa-at me-2"></i>@Model.Cliente.correo
                                    }
                                    else
                                    {
                                        <em class="text-muted">No disponible</em>
                                    }
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-4">
                            <div class="info-item">
                                <label class="info-label">
                                    <i class="fas fa-phone me-2 text-primary"></i>Teléfono del Cliente
                                </label>
                                <div class="info-value">
                                    @if (Model.Cliente != null && !string.IsNullOrEmpty(Model.Cliente.telefono))
                                    {
                                        <i class="fas fa-phone me-2"></i>@Model.Cliente.telefono
                                    }
                                    else
                                    {
                                        <em class="text-muted">No disponible</em>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-4">
                        <div class="info-item">
                            <label class="info-label">
                                <i class="fas fa-sticky-note me-2 text-primary"></i>Observaciones
                            </label>
                            <div class="info-value description-text">
                                @if (string.IsNullOrEmpty(Model.observaciones))
                                {
                                    <em class="text-muted">Sin observaciones especiales</em>
                                }
                                else
                                {
                                    @Model.observaciones
                                }
                            </div>
                        </div>
                    </div>
                    
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg me-md-2">
                            <i class="fas fa-arrow-left me-2"></i>Volver a Reservas
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-lg me-md-2">
                            <i class="fas fa-edit me-2"></i>Editar Reserva
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger btn-lg">
                            <i class="fas fa-trash me-2"></i>Eliminar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
<style>
    .bg-gradient-info {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
    }
    
    .info-item {
        margin-bottom: 1.5rem;
    }
    
    .info-label {
        display: block;
        font-weight: 600;
        color: #495057;
        margin-bottom: 8px;
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
    
    .info-value {
        font-size: 1.1rem;
        color: #212529;
        padding: 12px 16px;
        background: #f8f9fa;
        border-radius: 8px;
        border-left: 4px solid #4facfe;
    }
    
    .date-display {
        font-size: 1.3rem;
        font-weight: 700;
        color: #1976d2;
        background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
    }
    
    .time-display {
        font-size: 1.3rem;
        font-weight: 700;
        color: #388e3c;
        background: linear-gradient(135deg, #e8f5e8 0%, #c8e6c9 100%);
    }
    
    .client-display {
        font-weight: 600;
        color: #1976d2;
    }
    
    .description-text {
        line-height: 1.6;
        min-height: 60px;
    }
    
    .btn-lg {
        border-radius: 10px;
        padding: 12px 30px;
        font-weight: 600;
    }
    
    .card {
        border-radius: 15px;
    }
    
    .badge {
        padding: 8px 16px;
        border-radius: 20px;
    }
</style>
}

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}