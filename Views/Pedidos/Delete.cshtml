@model GestionRestaurante.Models.Pedido
@using GestionRestaurante.Models
@{
    ViewData["Title"] = "Eliminar Pedido";
}

<div class="page-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="mb-0"><i class="fas fa-exclamation-triangle me-3 text-danger"></i>Eliminar Pedido</h1>
                <p class="mb-0 text-muted">Confirma la eliminación del pedido: <strong>@Model.numero_pedido</strong></p>
            </div>
            <div class="col-md-4 text-end">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Volver a Pedidos
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 border-danger">
                <div class="card-header bg-gradient-danger text-white">
                    <h5 class="mb-0"><i class="fas fa-trash me-2"></i>Confirmar Eliminación</h5>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-warning d-flex align-items-center" role="alert">
                        <i class="fas fa-exclamation-triangle me-3 fs-4"></i>
                        <div>
                            <strong>¡Atención!</strong> Esta acción no se puede deshacer. El pedido será eliminado permanentemente del sistema.
                        </div>
                    </div>
                    
                    <h6 class="text-muted mb-3">Información del pedido a eliminar:</h6>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="info-item">
                                <label class="info-label">
                                    <i class="fas fa-hashtag me-2 text-primary"></i>Número de Pedido
                                </label>
                                <div class="info-value">@Model.numero_pedido</div>
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <div class="info-item">
                                <label class="info-label">
                                    <i class="fas fa-calendar me-2 text-primary"></i>Fecha del Pedido
                                </label>
                                <div class="info-value">@Model.fecha.ToString("dd/MM/yyyy")</div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="info-item">
                                <label class="info-label">
                                    <i class="fas fa-flag me-2 text-primary"></i>Estado del Pedido
                                </label>
                                <div class="info-value">
                                    @{
                                        var estadoClass = Model.estado switch
                                        {
                                            EstadoPedido.pendiente => "bg-warning",
                                            EstadoPedido.servido => "bg-success",
                                            EstadoPedido.cancelado => "bg-danger",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge @estadoClass">@Model.estado.ToString().ToUpper()</span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <div class="info-item">
                                <label class="info-label">
                                    <i class="fas fa-user me-2 text-primary"></i>Cliente
                                </label>
                                <div class="info-value">
                                    @if (Model.Cliente != null)
                                    {
                                        @Model.Cliente.nombre @Model.Cliente.apellido
                                    }
                                    else
                                    {
                                        <em class="text-muted">Cliente no encontrado</em>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    @if (Model.Cliente != null)
                    {
                        <div class="alert alert-info mt-3" role="alert">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Información del Cliente:</strong> Este pedido pertenece a @Model.Cliente.nombre @Model.Cliente.apellido (@Model.Cliente.correo).
                        </div>
                    }
                    
                    <form asp-action="Delete" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg me-md-2">
                                <i class="fas fa-times me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger btn-lg">
                                <i class="fas fa-trash me-2"></i>Eliminar Definitivamente
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
<style>
    .bg-gradient-danger {
        background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
    }
    
    .info-item {
        margin-bottom: 1rem;
    }
    
    .info-label {
        display: block;
        font-weight: 600;
        color: #495057;
        margin-bottom: 5px;
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
    
    .info-value {
        font-size: 1rem;
        color: #212529;
        padding: 8px 12px;
        background: #f8f9fa;
        border-radius: 6px;
        border-left: 3px solid #ff6b6b;
    }
    
    .btn-lg {
        border-radius: 10px;
        padding: 12px 30px;
        font-weight: 600;
    }
    
    .card {
        border-radius: 15px;
    }
    
    .badge {
        padding: 6px 12px;
        border-radius: 15px;
    }
    
    .alert {
        border-radius: 10px;
        border: none;
    }
</style>
}

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}