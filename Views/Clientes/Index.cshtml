@model IEnumerable<GestionRestaurante.Models.Cliente>
@{
    ViewData["Title"] = "Clientes";
}

<div class="page-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="mb-0"><i class="fas fa-users me-3"></i>Gestión de Clientes</h1>
                <p class="mb-0 mt-2">Administra la información de los clientes del restaurante</p>
            </div>
            <div class="col-md-4 text-end">
                <a class="btn btn-light btn-lg" asp-action="Create">
                    <i class="fas fa-plus me-2"></i>Nuevo Cliente
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th><i class="fas fa-user me-2"></i>Nombre</th>
                            <th><i class="fas fa-user me-2"></i>Apellido</th>
                            <th><i class="fas fa-envelope me-2"></i>Correo</th>
                            <th><i class="fas fa-phone me-2"></i>Teléfono</th>
                            <th class="text-center"><i class="fas fa-cogs me-2"></i>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-bold">@item.nombre</td>
                            <td class="fw-bold">@item.apellido</td>
                            <td>
                                <a href="mailto:@item.correo" class="text-decoration-none">
                                    <i class="fas fa-envelope me-1"></i>@item.correo
                                </a>
                            </td>
                            <td>
                                <a href="tel:@item.telefono" class="text-decoration-none">
                                    <i class="fas fa-phone me-1"></i>@item.telefono
                                </a>
                            </td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a class="btn btn-outline-info btn-sm" asp-action="Details" asp-route-id="@item.Id" title="Ver detalles">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a class="btn btn-outline-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id" title="Editar">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a class="btn btn-outline-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id" title="Eliminar">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


