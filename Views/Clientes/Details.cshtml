@model GestionRestaurante.Models.Cliente
@{
    ViewData["Title"] = "Detalles Cliente";
}

<div class="page-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="mb-0"><i class="fas fa-eye me-3"></i>Detalles del Cliente</h1>
                <p class="mb-0 text-muted">Información completa del cliente: <strong>@Model.nombre @Model.apellido</strong></p>
            </div>
            <div class="col-md-4 text-end">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Volver a Clientes
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-gradient-info text-white">
                    <h5 class="mb-0"><i class="fas fa-users me-2"></i>Información del Cliente</h5>
                </div>
                <div class="card-body p-4">
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <div class="info-item">
                                <label class="info-label">
                                    <i class="fas fa-user me-2 text-primary"></i>Nombre
                                </label>
                                <div class="info-value">@Model.nombre</div>
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-4">
                            <div class="info-item">
                                <label class="info-label">
                                    <i class="fas fa-user me-2 text-primary"></i>Apellido
                                </label>
                                <div class="info-value">@Model.apellido</div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <div class="info-item">
                                <label class="info-label">
                                    <i class="fas fa-envelope me-2 text-primary"></i>Correo Electrónico
                                </label>
                                <div class="info-value email-display">
                                    <i class="fas fa-at me-2"></i>@Model.correo
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-4">
                            <div class="info-item">
                                <label class="info-label">
                                    <i class="fas fa-phone me-2 text-primary"></i>Teléfono
                                </label>
                                <div class="info-value">
                                    @if (string.IsNullOrEmpty(Model.telefono))
                                    {
                                        <em class="text-muted">Sin teléfono registrado</em>
                                    }
                                    else
                                    {
                                        <i class="fas fa-phone me-2"></i>@Model.telefono
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <div class="info-item">
                                <label class="info-label">
                                    <i class="fas fa-shopping-cart me-2 text-primary"></i>Total Pedidos
                                </label>
                                <div class="info-value">
                                    <span class="badge bg-primary fs-6">@Model.Pedidos.Count pedidos</span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-4">
                            <div class="info-item">
                                <label class="info-label">
                                    <i class="fas fa-calendar-check me-2 text-primary"></i>Total Reservas
                                </label>
                                <div class="info-value">
                                    <span class="badge bg-success fs-6">@Model.Reservas.Count reservas</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg me-md-2">
                            <i class="fas fa-arrow-left me-2"></i>Volver a Clientes
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-lg me-md-2">
                            <i class="fas fa-edit me-2"></i>Editar Cliente
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger btn-lg">
                            <i class="fas fa-trash me-2"></i>Eliminar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
<style>
    .bg-gradient-info {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
    }
    
    .info-item {
        margin-bottom: 1.5rem;
    }
    
    .info-label {
        display: block;
        font-weight: 600;
        color: #495057;
        margin-bottom: 8px;
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
    
    .info-value {
        font-size: 1.1rem;
        color: #212529;
        padding: 12px 16px;
        background: #f8f9fa;
        border-radius: 8px;
        border-left: 4px solid #4facfe;
    }
    
    .email-display {
        background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
        color: #1976d2;
        font-weight: 600;
    }
    
    .btn-lg {
        border-radius: 10px;
        padding: 12px 30px;
        font-weight: 600;
    }
    
    .card {
        border-radius: 15px;
    }
    
    .badge {
        padding: 8px 16px;
        border-radius: 20px;
    }
</style>
}

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}