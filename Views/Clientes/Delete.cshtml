@model GestionRestaurante.Models.Cliente
@{
    ViewData["Title"] = "Eliminar Cliente";
}

<div class="page-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="mb-0"><i class="fas fa-exclamation-triangle me-3 text-danger"></i>Eliminar Cliente</h1>
                <p class="mb-0 text-muted">Confirma la eliminación del cliente: <strong>@Model.nombre @Model.apellido</strong></p>
            </div>
            <div class="col-md-4 text-end">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Volver a Clientes
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 border-danger">
                <div class="card-header bg-gradient-danger text-white">
                    <h5 class="mb-0"><i class="fas fa-trash me-2"></i>Confirmar Eliminación</h5>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-warning d-flex align-items-center" role="alert">
                        <i class="fas fa-exclamation-triangle me-3 fs-4"></i>
                        <div>
                            <strong>¡Atención!</strong> Esta acción no se puede deshacer. El cliente y todos sus pedidos y reservas serán eliminados permanentemente.
                        </div>
                    </div>
                    
                    <h6 class="text-muted mb-3">Información del cliente a eliminar:</h6>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="info-item">
                                <label class="info-label">
                                    <i class="fas fa-user me-2 text-primary"></i>Nombre Completo
                                </label>
                                <div class="info-value">@Model.nombre @Model.apellido</div>
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <div class="info-item">
                                <label class="info-label">
                                    <i class="fas fa-envelope me-2 text-primary"></i>Correo Electrónico
                                </label>
                                <div class="info-value">@Model.correo</div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="info-item">
                                <label class="info-label">
                                    <i class="fas fa-phone me-2 text-primary"></i>Teléfono
                                </label>
                                <div class="info-value">
                                    @if (string.IsNullOrEmpty(Model.telefono))
                                    {
                                        <em class="text-muted">Sin teléfono registrado</em>
                                    }
                                    else
                                    {
                                        @Model.telefono
                                    }
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <div class="info-item">
                                <label class="info-label">
                                    <i class="fas fa-chart-bar me-2 text-primary"></i>Actividad
                                </label>
                                <div class="info-value">
                                    <span class="badge bg-primary me-2">@Model.Pedidos.Count pedidos</span>
                                    <span class="badge bg-success">@Model.Reservas.Count reservas</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    @if (Model.Pedidos.Count > 0 || Model.Reservas.Count > 0)
                    {
                        <div class="alert alert-danger mt-3" role="alert">
                            <i class="fas fa-warning me-2"></i>
                            <strong>Advertencia:</strong> Este cliente tiene @Model.Pedidos.Count pedido(s) y @Model.Reservas.Count reserva(s) asociados. 
                            Todos estos registros también serán eliminados.
                        </div>
                    }
                    
                    <form asp-action="Delete" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg me-md-2">
                                <i class="fas fa-times me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger btn-lg">
                                <i class="fas fa-trash me-2"></i>Eliminar Definitivamente
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
<style>
    .bg-gradient-danger {
        background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
    }
    
    .info-item {
        margin-bottom: 1rem;
    }
    
    .info-label {
        display: block;
        font-weight: 600;
        color: #495057;
        margin-bottom: 5px;
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
    
    .info-value {
        font-size: 1rem;
        color: #212529;
        padding: 8px 12px;
        background: #f8f9fa;
        border-radius: 6px;
        border-left: 3px solid #ff6b6b;
    }
    
    .btn-lg {
        border-radius: 10px;
        padding: 12px 30px;
        font-weight: 600;
    }
    
    .card {
        border-radius: 15px;
    }
    
    .badge {
        padding: 6px 12px;
        border-radius: 15px;
    }
    
    .alert {
        border-radius: 10px;
        border: none;
    }
</style>
}

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}