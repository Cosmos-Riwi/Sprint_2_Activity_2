@model IEnumerable<Waiter>

@{
    ViewData["Title"] = "Gesti칩n de Meseros";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Gesti칩n de Meseros</h2>
    <a asp-action="Create" class="btn btn-primary">
        Nuevo Mesero
    </a>
</div>

<div class="card">
    <div class="card-header">
        <h5>Lista de Meseros</h5>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Nombre Completo</th>
                            <th>Turno</th>
                            <th>A침os de Experiencia</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var waiter in Model)
                        {
                            <tr>
                                <td>@waiter.Id</td>
                                <td>@waiter.FullName</td>
                                <td>@waiter.Shift</td>
                                <td>@waiter.YearsOfExperience a침os</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@waiter.Id" class="btn btn-sm btn-outline-primary" title="Ver detalles">
                                            Ver
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@waiter.Id" class="btn btn-sm btn-outline-secondary" title="Editar">
                                            Editar
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@waiter.Id" class="btn btn-sm btn-outline-danger" title="Eliminar">
                                            Eliminar
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <h5 class="text-light">No hay meseros registrados</h5>
                <p class="text-muted">Comienza agregando tu primer mesero</p>
            </div>
        }
    </div>
</div>
