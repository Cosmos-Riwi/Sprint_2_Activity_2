@model Waiter

@{
    ViewData["Title"] = "Crear Mesero";
}

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card">
            <div class="card-header">
                <h5>Crear Nuevo Mesero</h5>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="FirstName" class="form-label">
                                    Nombre
                                </label>
                                <input asp-for="FirstName" class="form-control" placeholder="Ingrese el nombre" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="LastName" class="form-label">
                                    Apellido
                                </label>
                                <input asp-for="LastName" class="form-control" placeholder="Ingrese el apellido" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Shift" class="form-label">
                                    Turno
                                </label>
                                <select asp-for="Shift" class="form-control">
                                    <option value="">Seleccione un turno</option>
                                    <option value="Mañana">Mañana</option>
                                    <option value="Tarde">Tarde</option>
                                    <option value="Noche">Noche</option>
                                </select>
                                <span asp-validation-for="Shift" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="YearsOfExperience" class="form-label">
                                    Años de Experiencia
                                </label>
                                <input asp-for="YearsOfExperience" class="form-control" type="number" min="0" max="50" placeholder="0" />
                                <span asp-validation-for="YearsOfExperience" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-group d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            Volver a la Lista
                        </a>
                        <button type="submit" class="btn btn-primary">
                            Crear Mesero
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
