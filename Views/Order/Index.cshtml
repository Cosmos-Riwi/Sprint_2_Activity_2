@model IEnumerable<Order>

@{
    ViewData["Title"] = "Gestión de Pedidos";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Gestión de Pedidos</h2>
    <a asp-action="Create" class="btn btn-primary">Crear Nuevo Pedido</a>
</div>

@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Número de Pedido</th>
                    <th>Cliente</th>
                    <th>Fecha</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.OrderNumber</td>
                        <td>@(order.Customer?.FullName ?? "N/A")</td>
                        <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>
                            <span class="badge">
                                @(order.Status.ToString() switch {
                                    "Pending" => "Pendiente",
                                    "Served" => "Servido",
                                    "Cancelled" => "Cancelado",
                                    _ => order.Status.ToString()
                                })
                            </span>
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-outline-primary">Ver</a>
                                <a asp-action="Edit" asp-route-id="@order.Id" class="btn btn-sm btn-outline-secondary">Editar</a>
                                <a asp-action="Delete" asp-route-id="@order.Id" class="btn btn-sm btn-outline-danger">Eliminar</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="text-center py-5">
        <h5 class="text-light">No hay pedidos registrados</h5>
        <p class="text-muted">Comienza creando tu primer pedido</p>
    </div>
}
